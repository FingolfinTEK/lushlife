
	<!-- name-space prefix 'h' bind to example.hoge package -->
<bean xmlns:h="urn:import:example.hoge">

	<!-- 
		example.hoge.Foo class.
	 -->
	<h:Foo id="foo" message="hi" />

	<!--  
		inject Foo instance to examle.hoge.Hoge's foo property.
	-->
	<h:Hoge foo="#{foo}" />
	
	<!-- 
		define trace interceptor.
	 -->
	<h:TraceInterceptor id="traceInterceptor" message="tracing" />

	<!-- 
		weaving trace interceptor to example.hoge.Hoge class.	
	 -->
	<interceptor-mapping target-class="example\.hoge\.Hoge">
		<interceptors>
			<value>#{traceInterceptor}</value>
		</interceptors>
	</interceptor-mapping>

</bean>
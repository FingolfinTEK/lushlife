<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">

	<listener>
		<listener-class>lushfile.core.servlet.LushListener</listener-class>
	</listener>

	<filter>
		<filter-name>guiceFilter</filter-name>
		<filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>guiceFilter</filter-name>
		<url-pattern>/lush/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>testServlet</servlet-name>
		<servlet-class>lushfile.core.sample.TestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>testServlet</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>lushlife</servlet-name>
		<servlet-class>lushfile.core.servlet.LushServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>lushlife</servlet-name>
		<url-pattern>/lush/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>

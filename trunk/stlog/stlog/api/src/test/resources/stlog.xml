<?xml version="1.0" encoding="UTF-8"?>

<stlog>
	<!-- locale selector for i18n -->
	<locale-selector class="stlog.i18n.LocaleSelectorImpl" />

	<message-resolvers>
		<!--
			search log message from ResourceBundle associated with log id.
		-->
		<message-resolver class="stlog.message.ResourceBunldeMessageResolver" />
		<!--
			search log message from annotation associated with log id;
		-->
		<message-resolver class="stlog.message.AnnotationMessageResolver" />
	</message-resolvers>

	<decorators>
		<!-- 
			change loglevel of stlog.LogMsg.TEST0001 to WARN;
		 -->
		<decorator class="stlog.decorator.ChangeLoglevel" enumClass="stlog.LogMsg"
			value="TEST0001" to="WARN" />

		<!-- 
			add log id to log message;
		 -->
		<decorator class="stlog.decorator.AddLogIdToMessage" />
	</decorators>

</stlog>

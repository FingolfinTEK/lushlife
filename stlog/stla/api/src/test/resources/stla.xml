<?xml version="1.0" encoding="UTF-8"?>

<stla>
	<!-- locale selector for i18n -->
	<locale-selector class="com.google.code.lushlife.stla.i18n.LocaleSelectorImpl" />

	<message-resolvers>
		<!--
			search log message from ResourceBundle associated with log id enum.
		-->
		<message-resolver class="com.google.code.lushlife.stla.message.ResourceBunldeMessageResolver" />
		<!--
			search log message from annotation associated with log id enum.
		-->
		<message-resolver class="com.google.code.lushlife.stla.message.AnnotationMessageResolver" />
		
	</message-resolvers>

	<decorators>
		<!-- 
			stop to write log of stla.LogMsg.TEST0002.
		 -->
		<decorator class="com.google.code.lushlife.stla.decorator.Block" category="stla"
			logId="TEST0002" />

		<!-- 
			change loglevel of stla.LogMsg.TEST0001 to WARN.
		 -->
		<decorator class="com.google.code.lushlife.stla.decorator.ChangeLoglevel" category="stla"
			logId="TEST0001" to="INFO" />

		<decorator class="com.google.code.lushlife.stla.decorator.PutLogIdToSLF4JMDC" key="id" />

		<!-- 
			add log id to log message;
		 -->
		<decorator class="com.google.code.lushlife.stla.decorator.AddLogIdToMessage" />
	</decorators>

</stla>
